<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".admin.AdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lightWeightGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_back_btn"
                android:layout_gravity="center"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textSize="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginEnd="34dp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_navigation"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:elevation="2dp">

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="54dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/id_mb_applied_vends"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_view_doc"
                        android:background="?attr/selectableItemBackgroundBorderless"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Applications" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/viewCompany"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_view_comp"
                        android:background="?attr/selectableItemBackgroundBorderless"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Company" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/addComp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_add_comp"
                        android:background="?attr/selectableItemBackgroundBorderless"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Add Company" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>