<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/lightWeightGrey</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomTextInputLayout">
        <item name="android:layout_marginTop">12dp</item>
        <item name="textColor">@color/colorBlack</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="UserProfile" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="cornerRadius">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorBlack</item>
    </style>


    <style name="errorButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/red</item>
    </style>

    <style name="checkBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorPurple</item>
    </style>

</resources>
